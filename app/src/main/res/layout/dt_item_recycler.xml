<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_index_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:background="@mipmap/dt_main_work_data_center" />

        <TextView
            android:id="@+id/tv_index_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_index_menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center|center_horizontal"
            android:text="haha"
            android:textColor="@color/colorWhiteMainTab"
            android:textSize="@dimen/base_mid_title_text14" />
    </LinearLayout>

</RelativeLayout>