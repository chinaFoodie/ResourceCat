<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/colorSlateGray">

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/base_mid_title_text20" />

        <EditText
            android:id="@+id/et_base_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/base_mid_title_text20"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_base_left_info"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <com.hyphenate.easeui.widget.CircleImageView
                android:id="@+id/civ_base_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/user_avatar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_base_back"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_base_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_finsh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_vertical_margin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_base_left"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_base_left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_vertical_margin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_base_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_base_right"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_base_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_vertical_margin"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>