<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <com.hyphenate.easeui.widget.CircleImageView
        android:id="@+id/dept_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ease_default_avatar"></com.hyphenate.easeui.widget.CircleImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dept_avatar"
        android:background="@color/colorGraySettingDept" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/dept_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dept_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/colorDarkContactHeader"
            android:textSize="@dimen/base_mid_title_text15" />

        <TextView
            android:id="@+id/tv_dept_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="13388164925"
            android:textColor="@color/colorWhiteMainTab" />
    </LinearLayout>

    <ImageView
        android:id="@+id/is_joined"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/img_dept_details_charge" />
</RelativeLayout>