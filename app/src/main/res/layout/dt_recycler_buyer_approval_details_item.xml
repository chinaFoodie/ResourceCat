<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_buyer_approval_details_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="采购明细"
        android:textColor="@color/colorBlackPerson"
        android:textSize="@dimen/base_mid_title_text16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_buyer_approval_details_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_approval_details_desc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="电脑一台"
            android:textColor="@color/colorGrayAddDept"
            android:textSize="@dimen/base_mid_title_text16" />

        <TextView
            android:id="@+id/tv_approval_details_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="办公用品"
            android:textColor="@color/colorGrayAddDept"
            android:textSize="@dimen/base_mid_title_text16" />

        <TextView
            android:id="@+id/tv_approval_details_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="4222.00"
            android:textColor="@color/colorGrayAddDept"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_del_buyer_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="× 删除"
        android:textColor="@color/red_delete" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGraySettingDept" />
</RelativeLayout>