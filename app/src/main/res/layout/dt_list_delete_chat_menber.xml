<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <com.hyphenate.easeui.widget.CircleImageView
            android:id="@+id/del_menber_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"></com.hyphenate.easeui.widget.CircleImageView>


        <TextView
            android:id="@+id/del_menber_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/del_menber_avatar"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/colorDarkContactHeader"
            android:textSize="@dimen/base_mid_title_text15" />

        <CheckBox
            android:id="@+id/is_del"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:checked="false"
            android:clickable="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/del_menber_avatar"
            android:background="@color/colorGraySettingDept" />
    </RelativeLayout>

</LinearLayout>