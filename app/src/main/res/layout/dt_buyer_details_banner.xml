<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGraySettingDept"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/colorBlackPerson"
            android:textSize="@dimen/base_mid_title_text16" />

        <EditText
            android:id="@+id/et_approval_goods_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="填写名称"
            android:paddingLeft="10dp"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/colorBlackPerson"
            android:textSize="@dimen/base_mid_title_text16" />

        <EditText
            android:id="@+id/et_approval_goods_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="采购数量"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="规格"
            android:textColor="@color/colorBlackPerson"
            android:textSize="@dimen/base_mid_title_text16" />

        <EditText
            android:id="@+id/et_approval_goods_spec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="采购物品规格"
            android:paddingLeft="10dp"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="单位"
            android:textColor="@color/colorBlackPerson"
            android:textSize="@dimen/base_mid_title_text16" />

        <EditText
            android:id="@+id/et_approval_goods_unit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="单位大小"
            android:paddingLeft="10dp"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/colorBlackPerson"
            android:textSize="@dimen/base_mid_title_text16" />

        <EditText
            android:id="@+id/et_approval_goods_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="物品价格"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textSize="@dimen/base_mid_title_text16" />
    </LinearLayout>
</LinearLayout>