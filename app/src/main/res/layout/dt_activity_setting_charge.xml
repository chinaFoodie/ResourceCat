<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGraySettingDept">

    <include
        android:id="@+id/include_settings_charge"
        layout="@layout/base_title_layout"></include>

    <ListView
        android:id="@+id/lv_org_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_settings_charge"></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_org_list_view"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="@string/add_charge_desc"
        android:textColor="@color/colorWhiteMainTab"
        android:textSize="@dimen/base_mid_title_text14" />
</RelativeLayout>